- content_for :title, "Categories"

.row
  .large-12
    %table
      %thead
        %tr
          %th Name
          %th Actions
      %tbody
        - @categories.each do |category|
          %tr
            %td= category.name
            %td
              =link_to "Edit", edit_category_path(category)
              =link_to "Remove", category_path(category), method: :delete, data: { confirm: "Are you sure?" }

.row
  .large-3
    =link_to "Add Category", new_category_path
