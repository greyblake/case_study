- content_for :title, "New picture"

= form_for @picture, url: { action: :create }, :html => { :multipart => true } do |f|
  = render partial: "shared/errors", locals: { model: @picture }
  .row
    .large-3.columns
      %label.right.inline Name
    .large-9.columns
      = f.text_field :name
  .row
    .large-3.columns
      %label.right.inline Picture
    .large-9.columns
      = f.file_field :picture
  .row
    .large-3.columns
      %label.right.inline Description
    .large-9.columns
      = f.text_area :description
  .row
    .large-3.columns
      = link_to "Cancel", :back, class: "button radius expand"
    .large-9.columns
      = f.submit "Update picture", class: "button radius expand"
